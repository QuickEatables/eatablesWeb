---
// Categories.astro - Grid of category cards with background images
const categories = [
  {
    title: "Food",
    image: "/food.png"
  },
  {
    title: "Groceries",
    image: "/Groceries.png"
  },
  {
    title: "Pharmacy",
    image: "/Pharmacy.png"
  },
  {
    title: "Local Markets",
    image: "/Markets.png"
  },
  {
    title: "Shopping",
    image: "/shopping.png"
  },
  {
    title: "Breverages",
    image: "/Beverages.png"
  }
];
---

<section class="categories-section">
  <div class="container">
    <div class="categories-grid">
      {categories.map((category) => (
        <div class="category-card">
          <div class="category-background" style={`background-image: url('${category.image}')`}></div>
          <div class="category-content">
            <h3>{category.title}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .categories-section {
    padding: 100px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 0.7rem;
    height: 350px;
  }

  .category-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .category-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: transform 0.3s ease;
    filter: brightness(0.6);
  }

  .category-card:hover .category-background {
    transform: scale(1.05);
  }

  .category-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    padding: 3rem 2rem 2rem;
    z-index: 10;
  }

  .category-content h3 {
    font-family: "Unbounded", sans-serif;
    font-optical-sizing: auto;
    font-weight: 600;
    font-style: normal;
    font-size: 20px;
    color: white;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .categories-section h2 {
      font-size: 2.5rem;
    }

    .categories-grid {
      height: 500px;
      gap: 1rem;
    }

    .category-content h3 {
      font-size: 1.25rem;
    }

    .category-content {
      padding: 2rem 1.5rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .categories-section {
      padding: 80px 0;
    }

    .container {
      padding: 0 1rem;
    }

    .categories-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
      height: 600px;
      gap: 1rem;
    }

    .category-content h3 {
      font-size: 1.125rem;
    }

    .category-content {
      padding: 2rem 1rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .categories-section {
      padding: 60px 0;
    }

    .categories-section h2 {
      font-size: 1.75rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(6, 150px);
      height: auto;
      gap: 1rem;
    }

    .category-content h3 {
      font-size: 1rem;
    }

    .category-content {
      padding: 1.5rem 1rem 1rem;
    }

    .category-card:hover {
      transform: translateY(-4px);
    }
  }
</style>
