---
// StatsSection.astro - Stats section with floating food images
---

<section class="stats-section">
  <div class="container">
    <!-- Header -->
    <h2 class="section-title">One App, Many Services</h2>
    
    <!-- Main content area with floating images -->
    <div class="content-wrapper">
      <!-- Floating food images -->
      <div class="floating-image burger">
        <img src="/bugers.png" alt="Burger" />
      </div>
      
      <div class="floating-image dumplings">
        <img src="/pots.png" alt="Dumplings" />
      </div>
      
      <div class="floating-image pizza">
        <img src="/pizza.png" alt="Pizza" />
      </div>
      
      <div class="floating-image leaf">
        <img src="/leaf.png" alt="Leaf" />
      </div>
      
      <div class="floating-image orange-dot">
        <img src="/tomatos.png" alt="Leaf" />
      </div>
      
      <!-- Central content -->
      <div class="central-content">
        <h3>Better food for more people</h3>
        <p>For over a decade, we've enabled our customers to discover new tastes, delivered right to their doorstep</p>
      </div>
    </div>

    <!-- Stats row -->
    <div class="stats-row">
      <div class="stat-item">
        <div class="stat-number">1,000+</div>
        <div class="stat-label">restaurants</div>
      </div>

      <div class="divider"></div>

      <div class="stat-item">
        <div class="stat-number">3+</div>
        <div class="stat-label">cities</div>
      </div>

      <div class="divider"></div>

      <div class="stat-item">
        <div class="stat-content">
          <div class="stat-number">10,000+</div>
          
        </div>
        <div class="stat-label">orders delivered</div>
      </div>
<div class="stat-icon">
            <img src="/package.png" alt="Delivery Icon" />
          </div>
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 60px 0;
    background: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .section-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 700;
    color: #000000;
    margin-bottom: 4rem;
    font-family: "Unbounded", sans-serif;
  }

  .content-wrapper {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 6rem;
  }

  .central-content {
    text-align: center;
    max-width: 500px;
    z-index: 10;
  }

  .central-content h3 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2d5f3f;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .central-content p {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #596378;
  }

  /* Floating Images */
  .floating-image {
    position: absolute;
    z-index: 5;
  }

  .floating-image img {
    width: 120px;
    height: auto;
    filter: drop-shadow(0 8px 32px rgba(0, 0, 0, 0.1));
  }

  /* Specific positioning and animations */
  .burger {
    top: 20%;
    left: 10%;
    animation: float1 6s ease-in-out infinite;
  }

  .dumplings {
    top: 10%;
    right: 15%;
    animation: float2 5s ease-in-out infinite;
  }

  .pizza {
    bottom: 15%;
    right: 12%;
    animation: float3 7s ease-in-out infinite;
  }

  .leaf {
    top: 5%;
    left: 25%;
    animation: float4 4s ease-in-out infinite;
  }

  .leaf img {
    width: 60px;
  }

  .orange-dot {
    bottom: 20%;
    left: 20%;
    animation: float5 5s ease-in-out infinite;
  }


  .floating-image.orange-dot {
    width: 20px;
    height: 20px;
  }

.floating-image.orange-dot img {
    width: 20px;
    height: 20px;
  }

  /* Floating animations */
  @keyframes float1 {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    33% {
      transform: translateY(-20px) rotate(5deg);
    }
    66% {
      transform: translateY(-10px) rotate(-3deg);
    }
  }

  @keyframes float2 {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-25px) rotate(-5deg);
    }
  }

  @keyframes float3 {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    40% {
      transform: translateY(-15px) rotate(3deg);
    }
    80% {
      transform: translateY(-8px) rotate(-2deg);
    }
  }

  @keyframes float4 {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-12px) rotate(10deg);
    }
  }

  @keyframes float5 {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    50% {
      transform: translateY(-10px) scale(1.1);
    }
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 32px;
    padding: 1.5rem 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    max-width: 800px;
    margin: 0 auto;
  }

  .stat-item {
    text-align: start;
    position: relative;
    flex: 1;
  }

  .stat-content {
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #596378;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1rem;
    color: #767C8F;
    text-transform: lowercase;
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stat-icon img {
    width: 57px;
    height: 57px;
    object-fit: contain;
  }

  .divider {
    width: 1px;
    height: 60px;
    background: #e2e8f0;
    margin: 0 2rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .section-title {
      font-size: 2.5rem;
    }

    .central-content h3 {
      font-size: 2rem;
    }

    .stats-row {
      gap: 4rem;
    }

    .floating-image img {
      width: 100px;
    }
  }

  @media (max-width: 768px) {
    .stats-section {
      padding: 80px 0;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 3rem;
    }

    .content-wrapper {
      height: 300px;
      margin-bottom: 4rem;
    }

    .central-content {
      max-width: 400px;
    }

    .central-content h3 {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    .central-content p {
      font-size: 1rem;
    }

    .stats-row {
      flex-direction: column;
      gap: 2rem;
      padding: 2rem 1rem;
    }

    .divider {
      width: 60%;
      height: 1px;
      margin: 0;
    }

    .floating-image img {
      width: 80px;
    }

    .leaf img {
      width: 40px;
    }

    /* Adjust positioning for mobile */
    .burger {
      top: 10%;
      left: 5%;
    }

    .dumplings {
      top: 5%;
      right: 5%;
    }

    .pizza {
      bottom: 10%;
      right: 5%;
    }

    .leaf {
      top: 15%;
      left: 15%;
    }

    .orange-dot {
      bottom: 15%;
      left: 10%;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .central-content h3 {
      font-size: 1.5rem;
    }

    .central-content p {
      font-size: 0.9rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .stats-row {
      padding: 1.5rem 1rem;
    }

    .stat-icon img {
      width: 24px;
      height: 24px;
    }

    .content-wrapper {
      height: 250px;
    }

    .floating-image img {
      width: 60px;
    }

    .leaf img {
      width: 30px;
    }
  }
</style>
