<style>
  .footer {
    background: #000000;
    color: #ffffff;
    padding: 4rem 0 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .footer-brand .logo img {
    width: 40px;
    height: 40px;
  }

  .footer-brand .logo span {
    font-size: 1.5rem;
    font-weight: bold;
    color: #ffffff;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .footer-column h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column ul li {
    margin-bottom: 0.75rem;
  }

  .footer-column ul li a {
    color: #b3b3b3;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-column ul li a:hover {
    color: #ffffff;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #333333;
    border-radius: 50%;
    color: #b3b3b3;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #ffffff;
    color: #1a1a1a;
    transform: translateY(-2px);
  }

  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .download-btn {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .download-btn:hover {
    transform: translateY(-2px);
  }

  .download-btn img {
    height: 50px;
    width: auto;
    display: block;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid #333333;
    text-align: center;
  }

  .footer-bottom p {
    color: #888888;
    font-size: 0.8rem;
    line-height: 1.6;
    margin: 0;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .social-column {
      grid-column: span 2;
    }

    .download-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .container {
      padding: 0 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .social-column {
      grid-column: span 1;
    }

    .social-links {
      justify-content: center;
    }

    .download-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 2rem 0 1.5rem;
    }

    .footer-content {
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-bottom p {
      font-size: 0.75rem;
    }

    .download-btn img {
      height: 45px;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }

    .social-links {
      gap: 0.5rem;
    }
  }
</style>
