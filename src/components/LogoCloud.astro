---
// LogoCloud.astro - Animated logo cloud section
interface Vendor {
  vendorName: string;
  logo: string;
}

let logos: Vendor[] = [];

try {
  const response = await fetch('https://us-central1-eatables-je4cvo.cloudfunctions.net/getTopVendorLogos');
  const data = await response.json();
  logos = data.data.vendors || [];
} catch (error) {
  console.error('Failed to fetch vendor logos:', error);
  // Fallback logos in case API fails
  logos = [
  ];
}
---

<section class="logo-cloud">
  <div class="container">
    <!-- Top row - moves right -->
    <div class="logo-row logo-row-right">
      <div class="logo-track">
        {logos.map((logo: Vendor) => (
          <div class="logo-item">
            <img src={logo.logo} alt={logo.vendorName} />
          </div>
        ))}
        {logos.map((logo: Vendor) => (
          <div class="logo-item">
            <img src={logo.logo} alt={logo.vendorName} />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Bottom row - moves left -->
    <div class="logo-row logo-row-left">
      <div class="logo-track">
        {logos.map((logo: Vendor) => (
          <div class="logo-item">
            <img src={logo.logo} alt={logo.vendorName} />
          </div>
        ))}
        {logos.map((logo: Vendor) => (
          <div class="logo-item">
            <img src={logo.logo} alt={logo.vendorName} />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .logo-cloud {
    padding: 80px 0;
    /* background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); */
    overflow: hidden;
    position: relative;
  }

  .container {
    margin: 0 auto;
    padding: 0;
  }

  .logo-row {
    margin: 2rem 0;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    height: 80px;
    display: flex;
    align-items: center;
  }

  .logo-track {
    display: flex;
    gap: 3rem;
    animation-duration: 60s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .logo-row-right .logo-track {
    animation-name: scrollRight;
  }

  .logo-row-left .logo-track {
    animation-name: scrollLeft;
  }

  .logo-item {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 0;
    overflow: hidden;
    background: white;
  }

  .logo-item:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .logo-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    object-position: center;
    transition: filter 0.3s ease;
  }

  .logo-item:hover img {
    filter: grayscale(0%) opacity(1);
  }

  @keyframes scrollRight {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scrollLeft {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .logo-cloud {
      padding: 60px 0;
    }

    .logo-cloud h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .container {
      padding: 0 1rem;
    }

    .logo-item {
      width: 80px;
      height: 80px;
      padding: 0;
    }

    .logo-item img {
      width: 80px;
      height: 80px;
    }

    .logo-track {
      gap: 2rem;
    }

    .logo-row {
      height: 80px;
    }
  }

  @media (max-width: 480px) {
    .logo-cloud h2 {
      font-size: 1.75rem;
    }

    .logo-item {
      width: 80px;
      height: 80px;
      padding: 0;
    }

    .logo-item img {
      width: 80px;
      height: 80px;
    }

    .logo-track {
      gap: 1.5rem;
    }

    .logo-row {
      height: 80px;
    }
  }
</style>
